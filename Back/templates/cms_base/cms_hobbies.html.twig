	<script type="text/javascript" src="Fixe/javascript.js"></script>
	<script>
		function switch_hobbies(number)
		{
			if (number == 1)
			{
				$('.Hobbies_Switch').removeClass('Coloractive');
				$('.fa-music').addClass('Coloractive');
				$('.CMS_Hobbies').removeClass('active');
				$('#CMS_Hobbies_Musique').addClass('active');
			}
			else if (number == 2)
			{
				$('.Hobbies_Switch').removeClass('Coloractive');
				$('.fa-gamepad').addClass('Coloractive');
				$('.CMS_Hobbies').removeClass('active');
				$('#CMS_Hobbies_Jeux').addClass('active');
			}
			else if (number == 3)
			{
				$('.Hobbies_Switch').removeClass('Coloractive');
				$('.fa-film-alt').addClass('Coloractive');
				$('.CMS_Hobbies').removeClass('active');
				$('#CMS_Hobbies_Film').addClass('active');
			}
			else if (number == 4)
			{
				$('.Hobbies_Switch').removeClass('Coloractive');
				$('.fa-book').addClass('Coloractive');
				$('.CMS_Hobbies').removeClass('active');
				$('#CMS_Hobbies_Livre').addClass('active');
			}
		}
	</script>
