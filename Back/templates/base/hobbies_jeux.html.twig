{% extends 'base.html.twig' %}
{% block title %}
    {{parent()}}
    Jeux
{% endblock %}
{% block css %}
    <link type="text/css" rel="stylesheet" href="{{asset("css/Hobbies_Jeux.css")}}"/>
{% endblock %}
{% block content %}
    <!-- CONTENU -->
    <div id="Zone">
        <div id="Hobbies_Switch">
            <a href="{{path('hobbies')}}">
                <i class="fal fa-music"></i>
            </a>
            <a href="{{path('hobbiesJeux')}}">
                <i class="far fa-chevron-left"></i>
                <i class="fal fa-gamepad active"></i>
                <i class="far fa-chevron-right"></i>
            </a>
            <a href="{{path('hobbiesFilm')}}">
                <i class="fal fa-film-alt"></i>
            </a>
            <a href="{{path('hobbiesLivre')}}">
                <i class="fal fa-book"></i>
            </a>
        </div>
        <div id="Zone_bas">
            <div class="Wrap">
                <div id="Moment">
                    <div class="Moment_2">
                        <p>Jeu&nbsp;vid√©o&nbsp;du&nbsp;moment</p>
                        {% if jeu_moment %}
                        <a href="{{jeu_moment.link}}" target="_blank"><img src="{{jeu_moment.image.path}}" alt="{{jeu_moment.image.alt}}"></a>
                        {% endif %}
                    </div>
                </div>


                </div>


            <div class="Wrap">
                <div class="Favori">
                    <p>Jeux Video Favoris</p>
                </div>
                <div class="Article_element">
                    {%  set countJeuxFav = 0 %}
                    {% for hobbie in hobbies if hobbie.type == "Jeux_fav" %}
                        {% if countJeuxFav == 4 %}
                            {%  set countJeuxFav = 0 %}
                        {% endif %}
                        <div class="Une_Boite">
                            <a href="{{hobbie.link}}" target="_blank"><img alt="{{hobbie.image.alt}}" src="{{hobbie.image.path}}"></a>
                        </div>
                        {% set countJeuxFav = countJeuxFav + 1 %}
                    {% endfor %}
                    {% for i in  countJeuxFav..4 if countJeuxFav != 4 %}
                        <div class="Une_Boite hidden"></div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script crossorigin="anonymous" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script</script>
{% endblock %}
