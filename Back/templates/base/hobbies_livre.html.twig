{% extends 'base.html.twig' %}
{% block title %}
    {{parent()}}
    Blog
{% endblock %}
{% block css %}
    <link type="text/css" rel="stylesheet" href="{{asset("css/Hobbies_Film.css")}}"/>
{% endblock %}
{% block content %}
    <!-- CONTENU -->
    <div id="Zone">
        <div id="Hobbies_Switch">
            <a href="{{path('hobbies')}}">
                <i class="fal fa-music"></i>
            </a>
            <a href="{{path('hobbiesJeux')}}">
                <i class="fal fa-gamepad"></i>
            </a>
            <a href="{{path('hobbiesFilm')}}">
                <i class="fal fa-film-alt"></i>
            </a>
            <a href="{{path('hobbiesLivre')}}">
                <i class="far fa-chevron-left"></i>
                <i class="fal fa-book active"></i>
                <i class="far fa-chevron-right"></i>
            </a>
        </div>
        <div id="Zone_bas">
            <div class="Wrap">
                <div id="Moment">
                    <div class="Moment_2">
                        <p>Livre&nbsp;du&nbsp;moment</p>
                        {% if livre_moment %}<a href="{{livre_moment.link}}" target="_blank"><img src="{{livre_moment.image.path}}" alt="{{livre_moment.image.alt}}"></a>{% endif %}
                    </div>
                    <div class="Moment_2">
                        <p>BD&nbsp;du&nbsp;moment</p>
                        {% if bd_moment %}<a href="{{bd_moment.link}}" target="_blank"><img src="{{bd_moment.image.path}}" alt="{{bd_moment.image.alt}}"></a>{% endif %}
                    </div>
                    <div class="Moment_2">
                        <p>Manga&nbsp;du&nbsp;moment</p>
                        {% if manga_moment %}<a href="{{manga_moment.link}}" target="_blank"><img src="{{manga_moment.image.path}}" alt="{{manga_moment.image.alt}}"></a>{% endif %}
                    </div>
                </div>
            </div>

            <div class="Wrap">
                <div class="Favori">
                    <p>Livres Favoris</p>
                </div>
                <div class="Article_element">
                    {%  set countAlbumFav = 0 %}
                    {% for hobbie in hobbies if hobbie.type == "Livre_fav" %}
                        {% if countAlbumFav == 4 %}
                            {%  set countAlbumFav = 0 %}
                        {% endif %}
                        <div class="Une_Boite">
                            <a href="{{hobbie.link}}" target="_blank"><img alt="{{hobbie.image.alt}}" src="{{hobbie.image.path}}"></a>
                        </div>
                        {% set countAlbumFav = countAlbumFav + 1 %}
                    {% endfor %}
                    {% for i in  countAlbumFav..4 if countAlbumFav != 4 %}
                        <div class="Une_Boite hidden"></div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script crossorigin="anonymous" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script</script>
{% endblock %}
