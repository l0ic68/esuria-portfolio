{% extends 'base.html.twig' %}
{% block title %}
Esuria // Live
{% endblock %}
{% block css %}
<link type="text/css" rel="stylesheet" href={{asset("css/Live.css")}} />
{% endblock %}
{% block content %}
		<!-- CONTENU -->

		<div id="Principal_zone">
			<div id="Haut">
				<div id="Horaire">
					<p>
						18:00 - 20:00
					</p>
				</div>
				<div id="Theater">
					<p>
						MODE THEATRE
					</p>
					<i class="fal fa-expand-arrows-alt" aria-hidden></i>
				</div>
			</div>

			<div id="Twitch">
				<iframe src="https://player.twitch.tv/?channel=esuria" frameborder="0" allowfullscreen="true" scrolling="no" autoplay="yes" id="Twitch_1"></iframe>
			</div>

			<div id="Bas_page">
				<div class="Row_bas">
					<div class="Separation_info">
						<div class="Ligne_titre">
							<i class="fal fa-gamepad icone_info" aria-hidden></i>
							<h2 class="Titre_info">REGARDER SUR FAERITH'S</h2>
						</div>
						<p class="Description_info">
							Faerith's est un collectif de créateurs ainsi qu'une communauté Multi-Gaming
						</p>
					</div>
					<hr class="Point_mobile" />
					<div class="Separation_info">
						<div class="Ligne_titre">
							<i class="fal fa-heart icone_info" aria-hidden></i>
							<h2 class="Titre_info">SUIVEZ LA CHAÎNE</h2>
						</div>
						<p class="Description_info">
							Pour être au courant des prochains lives !
						</p>
					</div>
					<hr class="Point_mobile" />
					<div class="Separation_info">
						<div class="Ligne_titre">
							<i class="fab fa-twitch icone_info" aria-hidden></i>
							<h2 class="Titre_info">S'ABONNER - 4.99€</h2>
						</div>
						<p class="Description_info">
							Pour me soutenir dans mes projets et recevoir des avantages sur le Live
						</p>
					</div>
				</div>
				<hr id="Point" />
				<div class="Row_bas">
					<div class="Separation_info">
						<div class="Ligne_titre">
							<i class="far fa-money-bill-alt icone_info" aria-hidden></i>
							<h2 class="Titre_info">TIPS</h2>
						</div>
						<p class="Description_info">
							Pour me soutenir dans mes projets (diffusion de ton message sur le Live à partir de 2€)
						</p>
					</div>
					<hr class="Point_mobile" />
					<div class="Separation_info">
						<div class="Ligne_titre">
							<i class="fal fa-file-video icone_info" aria-hidden></i>
							<h2 class="Titre_info">REDIFUSSION</h2>
						</div>
						<p class="Description_info">
							Les VOD sont disponibles à partir de ma chaîne Twitch
						</p>
					</div>
					<hr class="Point_mobile" />
					<div class="Separation_info">
						<div class="Ligne_titre">
							<i class="fal fa-calendar-alt icone_info" aria-hidden></i>
							<h2 class="Titre_info">AGENDA</h2>
						</div>
						<p class="Description_info">
							Planning de mes prochains Lives
						</p>
					</div>
				</div>
			</div>
		</div>

		<div id="Chat">
			<iframe src="http://www.twitch.tv/embed/esuria/chat?darkpopout" frameborder="0" scrolling="yes" id="Twitch_chat"></iframe>
		</div>

{% endblock %}
{% block js %}
	<!-- SCRIPT JAVASCRIPT -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<script type="text/javascript" src="Fixe/javascript.js"></script>
	<script type="text/javascript">
		var swap = 0;
		$("#Theater").click(function() {
			if (swap == 0) {
				$("#Main_header").css({
					"display": "none"
				});
				$("#Principal_zone").css({
					"margin": "2px"
				});
				$("#Bas_page").css({
					"display": "none"
				});
				$("#Twitch").css({
					"margin": "0",
					"height": "auto",
					"border": "0px",
					"height": "100%"
				});

				$("#Twitch_1").css({
					"border": "0px",
					"height": "100%"
				});
				$("#Haut").css({
					"margin": "0",
					"border-top": "0px",
					"border-left": "0px",
					"border-right": "0px",
					"width": "101%",
					"min-height": "1.9em",
					"height": "1.9em"
				});
				swap = 1;
			} else {
				$("#Main_header").css({
					"display": "flex"
				});
				$("#Principal_zone").css({
					"margin": "0 6.5% 0 6.5%"
				});
				$("#Bas_page").css({
					"display": "flex"
				});
				$("#Twitch").css({
					"margin-bottom": "0.5em",
					"height": "auto"
				});

				$("#Twitch_1").css({
					"border": "2px solid #003471"
				});
				$("#Haut").css({
					"width": "100%",
					"margin": "0.5em 0 0.5em 0",
					"border": "solid 2px #003471",
					"height": "2em"
				});
				swap = 0;
			}
		});
		window.onresize = function() {
				if ($(document).width() < 1070) {
					$("#Haut").css({
						"width": "100%"
					});
				}
			if ($(document).width() < 1280) {
				$("#Main_header").css({
					"display": "none"
				});
			} else {
				if (swap == 0) {
					$("#Main_header").css({
						"display": "flex"
					});
				}
			}
		}
	</script>
{% endblock %}
